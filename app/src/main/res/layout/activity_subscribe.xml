<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".subscribe">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="128dp"
        android:layout_height="159dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        app:srcCompat="@drawable/logo" />
    <TextView
        android:id="@+id/textView789"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:textColor="#FFFFFF"
        android:text="Available Discounts :         25%         50%         75%" />

    <EditText
        android:id="@+id/subscribtion"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@id/textView789"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#11000000"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />
    <Button
        android:id="@+id/button"
        android:layout_width="251dp"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="25dp"
        android:layout_below="@+id/subscribtion"
        android:layout_centerHorizontal="true"
        android:background="#6f7676"
        android:text="Subscribe"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="287dp" />


</RelativeLayout>